{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Votre panier</h1>
        {% if items | length > 0 %}
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Id</th>
                    <th>Quantité</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.id }}</td>
                        <td>{{ item.quantite }}</td>
                        <td><a href="{{ path('panier_remove', {'id': item.produit.id}) }}"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')"
                               class="btn btn-danger btn-sm"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                </svg><i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Votre panier est vide !</p>
        {% endif %}
        <a href="{{ path('home') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('panier_pdf') }}" class="btn btn-primary">Export au format PDF</a>
    </div>
{% endblock %}