
{% block title %}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Votre panier</h1>
        {% if items | length > 0 %}
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Id</th>
                    <th>Quantité</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.id }}</td>
                        <td>{{ item.quantite }}</td>
                        <td><a href="{{ path('panier_remove', {'id': item.produit.id}) }}"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')"
                               class="btn btn-danger btn-sm"><i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Votre panier est vide !</p>
        {% endif %}

    </div>
{% endblock %}