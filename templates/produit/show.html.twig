{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

    <h1>Produit</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ produit.nom }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ produit.prix }}</td>
        </tr>
        <tr>
            <th>Quantité</th>
            <td>{{ produit.quantite }}</td>
        </tr>
        </tbody>
    </table>

    <div class="row">

        <a href="{{ path('produit_edit', {'id': produit.id}) }}"class="btn btn-outline-warning"> Modifier</a>
        <a href="{{ path('produit_index') }}" class="btn btn-primary"> Retour à la liste</a>
    </div>


{% endblock %}


